{
  "name": "off-chain-swap-service",
  "version": "1.0.0",
  "description": "Off-chain swap service for Solana (SPL + Token-2022) with bridge-agnostic interface",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm exec tsc",
    "test": "pnpm exec vitest run",
    "test:watch": "pnpm exec vitest",
    "lint": "pnpm exec eslint src tests --ext .ts",
    "proof": "node --env-file=.env ./node_modules/tsx/dist/cli.mjs scripts/prove-solana-to-base.ts",
    "proof:status": "node --env-file=.env ./node_modules/tsx/dist/cli.mjs scripts/record-proof-status.ts",
    "cli": "node --env-file=.env ./node_modules/tsx/dist/cli.mjs scripts/cli.ts"
  },
  "keywords": [
    "solana",
    "swap",
    "bridge",
    "spl",
    "token-2022"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.95.0",
    "bs58": "^6.0.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
